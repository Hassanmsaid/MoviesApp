<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8"
    tools:context=".Gui.MovieActivity.MovieActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/movie_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_4"
        android:theme="@style/ToolBarStyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8">

            <ImageView
                android:id="@+id/details_movie_img"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/details_movie_title"
                    style="@style/TextLargeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:layout_weight="5"
                    android:text="Movie Title" />

                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/details_fav_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:mfb_animate_favorite="true"
                    app:mfb_color="white"
                    app:mfb_type="heart" />

            </LinearLayout>

            <TextView
                android:id="@+id/details_movie_overview"
                style="@style/TextMediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="Movie Overview" />

            <TextView
                android:id="@+id/details_movie_rating"
                style="@style/TextMediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="Movie Rating" />

            <TextView
                android:id="@+id/details_movie_rate_count"
                style="@style/TextMediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="Movie Rate Count" />

            <TextView
                android:id="@+id/details_movie_trailers_TV"
                style="@style/TextLargeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="Trailers" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/videos_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>